<div class="container">
  <h1>Cocktails</h1>
  <% @cocktails.each do |cocktail| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo %>')">
      <%= link_to cocktail.name, cocktail_path(cocktail) %>
    </div>
  <% end %>
  <%= link_to "+ Create new cocktail", new_cocktail_path %>
</div>

